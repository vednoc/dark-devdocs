/* ==UserStyle==
@name         Dark DevDocs
@description  A customizable theme for DevDocs.
@namespace    github.com/vednoc/dark-devdocs
@author       vednoc
@version      0.1.0
@homepageURL  https://github.com/vednoc/dark-devdocs
@supportURL   https://github.com/vednoc/dark-devdocs/issues
@updateURL    https://gitlab.com/vednoc/dark-devdocs/raw/master/dd.user.styl
@preprocessor stylus

@var text b_radius "Custom border radius" 4px
@var text ui_font "Custom UI font" "'custom_font', -apple-system, BlinkMacSystemFont, 'San Francisco', 'Segoe UI', Roboto, Ubuntu, 'Helvetica Neue', Arial, sans-serif"
@var text mono_font "Custom Mono font" "'custom_font', 'SFMono-Regular', 'Consolas', 'Liberation Mono', Menlo, Courier, monospace"
@var text mono_size "Custom Mono font size" 1em
@var text max_width "Max width for content" 100%
@var checkbox invert_ic "Icons: Invert language logos" 1
@var text fade_img "Media: Set default opacity" 1

@var color dark    "Dark color.   " #222222
@var color darken  "Darken color. " #262626
@var color darker  "Darker color. " #2f2f2f
@var color light   "Light color.  " #d1d1d1
@var color lighter "Lighter color." #c9c9c9
@var color icon    "Icon color.   " #e1e1e1
@var color accent  "Accent color. " #7289da
@var color yellow  "Yellow color. " #f0c674
@var color orange  "Orange color. " #de935f
@var color red     "Red color.    " #a54242
@var color magenta "Magenta color." #b294bb
@var color violet  "Violet color. " #85678f
@var color blue    "Blue color.   " #5f819d
@var color cyan    "Cyan color.   " #5e8d87
@var color green   "Green color.  " #8c9440
@var color white   "White color.  " #ffffff
@var color shadow  "Shadow color. " #00000020

==/UserStyle== */

@-moz-document domain('devdocs.io') {

    :root {
        --dark    : dark;
        --darken  : darken;
        --darker  : darker;
        --light   : light;
        --lighter : lighter;
        --accent  : accent;
        --shadow  : shadow;
        --yellow  : yellow;
        --orange  : orange;
        --red     : red;
        --magenta : magenta;
        --violet  : violet;
        --blue    : blue;
        --cyan    : cyan;
        --green   : green;
        --white   : white;
        --t       : transparent;

        --width     : max_width;
        --radius    : b_radius;
        --ui-font   : ui_font;
        --mono-font : mono_font;
        --mono-size : mono_size;

        --media-opacity: fade_img;

        scrollbar-color : var(--darker) var(--dark);
    }

    // * Use stylus-lang variables with CSS variables.
    bg      = var(--dark);
    hl      = var(--darken);
    bd      = var(--darker);
    fg      = var(--light);
    cm      = var(--lighter);
    ac      = var(--accent);
    sh      = var(--shadow);
    yellow  = var(--yellow);
    orange  = var(--orange);
    red     = var(--red);
    magenta = var(--magenta);
    violet  = var(--violet);
    blue    = var(--blue);
    cyan    = var(--cyan);
    green   = var(--green);
    white   = var(--white);
    t       = var(--t);
    r       = var(--radius);

    // * Mixins.
    radius() { border-radius: arguments }
    c(x, y = 0, z = 0, xi = 1, yi = 1, zi = 1) {
        if x is a 'call' {            color: xi is 0 ? x : x !important }
        if y is a 'call' {     border-color: yi is 0 ? y : y !important }
        if z is a 'call' { background-color: zi is 0 ? z : z !important }
    }


    // * Reset.
    body {
        c: cm 0 bg;

        * { scrollbar-width: thin }
        ::selection { c: white 0 ac }
        ::-moz-selection { c: white 0 ac }

        // * Feature -> Custom UI font.
        font-family: var(--ui-font);

        table {
            radius: r !important;
            c: 0 bd bg;
            thead {
                tr th {
                    c: fg bd hl;
                    ../ tr:first-child > th:first-child {
                        radius: calc(var(--radius) - 2px) 0 0 0;
                    }
                    ../ tr:first-child > th:last-child {
                        radius: 0 calc(var(--radius) - 2px) 0 0;
                    }
                }
            }
            tbody {
                tr th {
                    c: fg bd hl;
                    ../ tr:first-child > th:first-child {
                        radius: calc(var(--radius) - 2px) 0 0 0;
                    }
                    ../ tr:first-child > th:last-child {
                        radius: 0 calc(var(--radius) - 2px) 0 0;
                    }
                }
                tr td {
                    c: cm bd t;

                    // css: tables
                    &.bc-supports-no { c: red }
                    &.bc-supports-yes { c: green }
                }
                code { c: fg 0 bd }
                a { c: ac }
            }
        }

        small { c: cm }
        code {
            &._label { c: fg 0 bd }
        }

        pre {
            radius: r;
            c: fg bd hl;
            box-shadow: 0 2px 4px 0 sh;

            // * Feature -> Custom Mono font.
            &, ../ code, samp { font-family: var(--mono-font) }

            // * Feature -> Custom font size.
            &, ../ code, samp { font-size: var(--mono-size) }

            &[data-language] {
                font-size: var(--mono-size);
                .token, .comment, .punctuation { c: cm }
                .function { c: red }
                .number { c: violet }
                .operator, .entity, .url { c: yellow }
                .atrule, .attr-value, .keyword { c: blue }
                .property, .tag, .boolean, .constant, .symbol, .deleted { c: orange }
                .selector, .attr-name, .string, .char, .builtin, .inserted { c: green }
                .symbol.atom { c: violet }
            }

            // Clipboard button.
            ._pre-clip {
                opacity: 0;
                display: block;
                transition: 0.15s ease;
                &::before { c: fg }
                > svg { fill: fg }
                ../:hover ._pre-clip { opacity: 0.5 }
            }
        }

        // * Sidebar -> Overflowing list item.
        ._list-item.clone {
            c: fg 0 hl;
            box-shadow: none;
        }

        // Main -> Landing page.
        ._intro {
            &-message {
                radius: r;
                c: fg bd hl;
                box-shadow: 0 2px 4px 0 sh;
                a[href] { c: ac }
            }
            iframe { filter: invert(1) hue-rotate(180deg) }
        }

        // Settings -> Header.
        ._settings ._header { c: fg bd bg }

        // Button groups.
        ._docs-links {
            radius: r;
            c: fg bd bg;
            ._show ~ ._show { c: 0 bd 0 }
        }

        // Feature -> Invert icon colors.
        if ( invert_ic == 1 ) {
            ._list-item::before, ._docs-name::before, ._path-item::before {
                filter: invert(1) grayscale(100%) !important;
            }
        }
    }


    // * Global -> Buttons.
    ._btn {
        transition: 0.15s ease;
        c: fg bd bg 0 0 0;

        &:hover { c: 0 0 hl 0 0 0 }

        &-link {
            c: fg;
            &._reset-btn { c: red }
        }
    }


    // * Sidebar -> Search.
    ._header[role='banner'] {
        c: 0 bd bg;

        ._search {
            &-tag { c: fg 0 bd }

            &-input {
                radius: r;
                c: fg bd hl;
                box-shadow: inset 0 2px 4px sh;
                &:focus {
                    c: 0 ac;
                    box-shadow: 0 0 1px ac;
                }
            }

            &-clear {
                transition: 0.15s ease;
                svg { fill: cm }
            }
        }

        // Menu.
        ._menu {
            radius: r;
            c: 0 bd bg;
            box-shadow: 0 2px 4px sh;
            h1 {
                c: fg bd t;
                a { c: fg }
            }
            &-link {
                c: cm;
                transition: 0.15s ease;
                &:hover { c: fg 0 bd }
            }
        }
    }

    // * Sidebar -> Core.
    ._sidebar[tabindex='-1'] {
        c: cm green bg;

        a { c: ac }

        ._list {
            box-shadow: inset -1px 0 bd;

            &-title {
                c: cm;
                svg { fill: cm }
                &.open-title { c: fg }
            }

            &-item {
                c: fg 0 t;
                box-shadow: inset -1px 0 bd;
                &:hover { c : 0 0 bd }

                // List states.
                ../ .focus { c: fg 0 bd }
                ../ .active { c: white 0 ac }

                // Highlight currently open list.
                ../ > div > ._list-dir.open:not(._icon-c) + ._list-sub {
                    box-shadow: inset 8px 0 bd, inset 0 0 0 1px bd;
                }

                ._list-arrow {
                    fill: fg;
                    ../.open ._list-arrow { opacity: 1 }
                }

                // Version colors.
                ._list-count { color: inherit }

                // Disabled list items.
                &._list-disabled {
                    c: cm;
                    ^[1]-enable { c: ac }
                }
            }

            &-picker-head {
                background: linear-gradient(0deg, t, bg 75%) !important;
                span { c: fg }
            }

            &-note { c: cm }

            &-pagelink { c: ac }
        }
    }


    // * Main -> Content.
    ._container[role] {
        // * Feature -> Max width for content.
        > main._content > div {
            margin: 0 auto;
            max-width: var(--width);
        }

        // 404 error.
        ._error {
            &-text { c: cm }
        }

        // Links.
        a {
            &[href] {
                c: ac 0 0 0;
                code {
                    &.inline { color: inherit !important }
                    // Reset code within links.
                    ../ > code {
                        radius: 3px;
                        padding: 1.5px 3px;
                        font-size: 1em;
                        c: ac 0 hl;
                        box-shadow: inset 0 0 0 1px bd;
                    }
                }
            }
            // External links.
            &[href^='http:'], &[href^='https:'] {
                &::after {
                    c: fg;
                    content: '\1F5D7';
                    width: unset;
                    height: unset;
                    font-size: 1em;
                    background: none;
                    margin: 0 0 0 2px;
                    display: inline-flex;
                }
            }
        }

        p {
            c: fg;

            // Page links.
            &._links {
                ._links-link { c: ac 0 bg }
            }
            > code {
                c: fg 0 hl;
                box-shadow: inset 0 0 0 1px bd;

                // fish/prevd
                // TODO: Possible removal.
                ../ a[href] > code { font-family: var(--ui-font) }
            }
        }

        li {
            c: fg;
            > code {
                c: fg 0 hl;
                box-shadow: inset 0 0 0 1px bd;
            }
        }

        h1 {
            font-size: 1.8em;
            code { c: fg }
            &::before { margin-right: 3px }
            &::after { c: 0 0 bd }
        }
        h2 {
            font-size: 1.4em;
            c: fg t t;
            box-shadow: inset 0 -1px bd;

            // clojure/core
            span { c: cm }
        }
        h3 {
            font-size: 1.1em;
            c: fg t t;
            box-shadow: inset 0 -1px bd;

            // Types.
            > span { c: yellow }
        }

        // Headings -> Pseudo-elements.
        for i in 1..6 {
            h{i}::before {
                font-family: var(--mono-font);
                opacity: 0.8;
                c: cm;
            }
        }
        h1::before {
            c: 0;
            content: '# ';
        }
        h2::before {
            c: green;
            content: '## ';
        }
        h3::before {
            c: blue;
            content: '### ';
        }
        h4::before {
            c: cyan;
            content: '#### ';
        }
        h5::before {
            c: 0;
            content: '##### ';
        }
        h6::before {
            c: 0;
            content: '###### ';
        }

        blockquote, .important-traits, .tip, div.information {
            radius: r;
            c: fg orange bd;
        }
        .note {
            radius: r;
            c: fg green bd;
        }

        // Callouts.
        .doc-box {
            radius: r;
            &.doc-info { c: fg blue bg }
            &.doc-notice { c: fg yellow bg }
        }

        ._toc {
            radius: r;
            c: fg bd bg;
        }

        ._shortcut {
            &-code { c: fg 0 bd }
        }

        ._note {
            radius: r;
            &:not([id]) { c: fg orange bg }
            ._label { c: fg 0 bg }
            &-green { c: green green bd }
        }

        // * Feature -> Set default media opacity.
        > [role='main'] {
            img, video, iframe {
                transition: 0.15s ease;
                &:not(:hover) { filter: opacity(var(--media-opacity)) }
            }
        }
    }


    // * Main -> Core.
    ._app[role='application'] {

        // Notice.
        ._notice {
            c: cm 0 bg;
            box-shadow: 0 -1px 0 0 bd;
            a[href] { c: ac }
            code { c: fg }
        }

        // Breadcrumbs.
        ._path {
            c: 0 0 bg;
            box-shadow: inset 0 1px bd;
            span:last-child { c: fg }
            &-arrow { fill: cm }
            &-item { c: cm }
        }

        // Resize the sidebar.
        > ._resizer {
            top: 0;
            bottom: 0;
            width: 8px;
            margin-left: -8px;
            c: 0 0 bd;
            opacity: 0;
        }

        // Credits.
        ._attribution {
            &-p {
                radius: r;
                c: fg 0 bd;
            }
            &-link { c: ac }
        }

        // News page.
        ._news {
            &-row { c: cm }
            &-title { c: fg }
        }
    }
}
